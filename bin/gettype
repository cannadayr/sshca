#!/bin/bash

basedir="/root/sshca"

if [ ! -z "$SSHCA_BASEDIR" ]; then
    basedir="$SSHCA_BASEDIR"
fi

cachedir="$basedir/cache"
confdir="$basedir/conf"

. "$confdir/sshca.conf"

path=""
basename=""
dirname=""

if [ ! -z "$1" ]; then
    path=$1
else
    path=$(cat /dev/stdin)
fi

if [ ! -e "$path" ]; then
    echo "error: path doesn't exist '$path'"
    exit 2 
fi

if [ ! -d "$path" ]; then
    dirname=$(dirname $path)
    basename=$(basename $path)
else
    dirname=$path
    basename=$path
fi

(
    cd $dirname

    if [ -h "$basename" ]; then
        cd $(readlink "$basename")
    fi

    path=$(pwd)
    baselen=$(echo "$cachedir/" | wc -c)
    partial=$(pwd | cut -b$baselen- | cut -d/ -f1)
    partiallen=$(echo $partial | wc -c)
    let partiallen=partiallen-2
    echo $partial | cut -b1-$partiallen
)
